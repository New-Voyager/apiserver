  steps:

    # configure game
    - start-games:
        - club: chennai
          game: test1
          input:
            title: test1
            gameType: HOLDEM
            smallBlind: 1.0
            bigBlind: 2.0
            utgStraddleAllowed: true
            straddleBet: 4.0
            minPlayers: 2
            maxPlayers: 9
            gameLength: 60
            buyInApproval: false
