{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/build/index.js",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
    },
    {
      "name": "Watch debug with NATS",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "outputCapture": "std",
      "runtimeArgs": ["run-script", "watch-debug-nats"],
      "port": 9235
    },    
    {
      "name": "Watch debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "watch-debug"],
      "port": 9235
    },
    {
      "name": "Watch debug windows",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug-windows"],
      "port": 9235
    },           
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "name": "Run a specific jest test",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--testNamePattern",
        "start a new game"
      ],
      "env": {
        "NODE_ENV": "test",
        "DB_USED": "sqllite"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "name": "Run a specific jest unit-test",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "./unit-tests",
        "--testNamePattern",
        "gametest: Take a break"
      ],
      "env": {
        "NODE_ENV": "test",
        "DB_USED": "sqllite"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Script tests",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],

      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceRoot}",
      "args": ["script-tests/testdriver.ts"],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
    }    
  ]
}